<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.utunan.mapper.questionbank.QuestionSearchMapper">
    <!--根据搜索条件查找题目-->
    <select id="selectQuestionBySearchValue" resultType="com.utunan.pojo.base.questionbank.Question">
        select *
        from question
        where chapterName like #{searchValue}
            or questionContent like #{searchValue}
    </select>
    <!--统计所有题目数量-->
    <select id="countAllQuestion" resultType="java.lang.Long">
        select count(*)
        from question
    </select>
</mapper>